{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "ruff": {
      "command": [
        "ruff",
        "format",
        "$FILE"
      ],
      "extensions": [
        ".py",
        ".pyi"
      ]
    },
    "marimo-check": {
      "command": [
        "uvx",
        "marimo",
        "check",
        "$FILE"
      ],
      "extensions": [
        ".py"
      ]
    }
  }
}
